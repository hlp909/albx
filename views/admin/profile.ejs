<%- include('./layouts/header.ejs');%>


  <div class="main">
    <%- include('./layouts/admin_navbar.ejs');%>

    <div class="container-fluid">
      <div class="page-title">
        <h1>我的个人资料</h1>
      </div>
      <!-- 有错误信息时展示 -->
      <div class="alert alert-danger" style="display: none;">
        <strong>提示！</strong><span>发生XXX错误</span>
      </div>
      <form class="form-horizontal">
       
      </form>
    </div>
  </div>

  <%- include('./layouts/admin_aside.ejs');%>

  <%- include('./layouts/footer.ejs');%>
  <script type="text/template"id="template">
    {{each data}}
    <div class="form-group">
      <label class="col-sm-3 control-label">头像</label>
      <div class="col-sm-6">
        <label class="form-image">
          <input id="avatar" type="file">
          <img src="{{$value.avatar}}">
          <i class="mask fa fa-upload"></i>
        </label>
      </div>
    </div>
    <div class="form-group">
      <label for="email" class="col-sm-3 control-label">邮箱</label>
      <div class="col-sm-6">
        <input id="email" class="form-control" name="email" type="type" value="{{$value.email}}" placeholder="邮箱" readonly>
        <p class="help-block">登录邮箱不允许修改</p>
      </div>
    </div>
    <div class="form-group">
      <label for="slug" class="col-sm-3 control-label">别名</label>
      <div class="col-sm-6">
        <input id="slug" class="form-control" name="slug" type="type" value="{{$value.slug}}" placeholder="slug">
        <p class="help-block">https://zce.me/author/<strong>zce</strong></p>
      </div>
    </div>
    <div class="form-group">
      <label for="nickname" class="col-sm-3 control-label">昵称</label>
      <div class="col-sm-6">
        <input id="nickname" class="form-control" name="nickname" type="type" value="{{$value.nickname}}" placeholder="昵称">
        <p class="help-block">限制在 2-16 个字符</p>
      </div>
    </div>
    <div class="form-group">
      <label for="bio" class="col-sm-3 control-label">简介</label>
      <div class="col-sm-6">
        <textarea id="bio" class="form-control" placeholder="Bio" cols="30" rows="6">{{$value.bio}}</textarea>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-6">
        <button type="submit" class="btn btn-primary update">更新</button>
        <a class="btn btn-link" href="/admin/password-reset" id={{$value.id}}>修改密码</a>
      </div>
    </div>
    {{/each}}
  </script>
  <script src="/assets/vendors/template/template.js"></script>
  <script src="/assets/js/updateUserData.js"></script>
